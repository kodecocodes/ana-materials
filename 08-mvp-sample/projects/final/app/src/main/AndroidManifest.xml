<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.raywenderlich.wewatch"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">

      <activity android:name="com.raywenderlich.wewatch.main.MainActivity"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <intent-filter>
          <action android:name="android.intent.action.MAIN"/>

          <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
      </activity>

      <activity android:name="com.raywenderlich.wewatch.add.AddMovieActivity"
                  android:label="Add Movie">
      </activity>

      <activity android:name="com.raywenderlich.wewatch.search.SearchActivity"
                  android:label="Search Results">
      </activity>

    </application>

</manifest>